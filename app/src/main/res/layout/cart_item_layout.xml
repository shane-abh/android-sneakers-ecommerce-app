<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="10sp"
        android:elevation="20dp"
        android:background="@drawable/item_border">

        <ImageView
            android:id="@+id/cartImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="15sp"
            android:background="@drawable/product_image_cart_border"
            android:elevation="10dp"
            android:src="@drawable/nike"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

            <TextView
                android:id="@+id/cartProductHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product Heading"
                android:layout_weight="0.7"
                android:textSize="18sp"
                android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"/>

                <ImageView
                    android:id="@+id/deletebtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="left"
                    android:src="@mipmap/baseline_delete_outline_24"/>
            </LinearLayout>


            <TextView
                android:id="@+id/cartProductTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's Shoes"
                android:layout_marginTop="5sp"
                android:textSize="10sp"
                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/cartProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100 "
                    android:layout_marginTop="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/cartProductQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:layout_marginTop="12sp"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    />


            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>

</LinearLayout>